@model inVent.Models.FacilityModels.FacilityDetail

@{
    ViewBag.Title = "Close";
}

<h2>Close</h2>

<h3>Are you sure you want to close this facility?</h3>
<div>
    <h4>
        Facility in Question:
    </h4>
    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert-danger" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <hr />
    @Html.HiddenFor(model=>model.Closed)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FacilityId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacilityId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Opened)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Opened.Date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Close" class="btn btn-default"/> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
